             (csc-options "-O3" "-C" "-O3" "-C" "`pkg-config --cflags gsl`")
             (link-options "-L" "`pkg-config --libs gsl`"))
  (extension gsl.vector.long
             (source "vector/gsl/gsl.vector.long.scm")
             (csc-options "-O3" "-C" "-O3" "-C" "`pkg-config --cflags gsl`")
             (link-options "-L" "`pkg-config --libs gsl`"))
  (extension gsl.vector.int
             (source "vector/gsl/gsl.vector.int.scm")
             (csc-options "-O3" "-C" "-O3" "-C" "`pkg-config --cflags gsl`")
